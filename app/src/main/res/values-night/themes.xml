<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ReadianApplication" parent="android:Theme.Material.NoActionBar" />

    <!-- Night mode adjustments -->
    <style name="NightAdjusted.Theme.Readian" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="PlatformAdjusted.Theme.Readian" parent="NightAdjusted.Theme.Readian">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Readian" parent="PlatformAdjusted.Theme.Readian" />

    <!-- Night mode splash screen -->
    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <style name="Theme.Readian.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Readian</item>
        <item name="windowSplashScreenBackground">?android:attr/colorBackground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>