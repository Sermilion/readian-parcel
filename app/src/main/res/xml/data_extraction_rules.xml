<?xml version="1.0" encoding="utf-8"?><!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <!-- Harden cloud backup (API 31+) -->
    <cloud-backup>
        <!-- EncryptedSharedPreferences holding API key -->
        <exclude domain="sharedpref" path="parcel_api_prefs.xml" />
        <!-- Room database (large/device-bound) -->
        <exclude domain="database" path="parcel_database" />
        <!-- DataStore files -->
        <exclude domain="file" path="datastore/user_data.pb" />
        <exclude domain="file" path="datastore/parcel_prefs.preferences_pb" />
    </cloud-backup>
    <!-- Also exclude from device-to-device transfer -->
    <device-transfer>
        <exclude domain="sharedpref" path="parcel_api_prefs.xml" />
        <exclude domain="database" path="parcel_database" />
        <exclude domain="file" path="datastore/user_data.pb" />
        <exclude domain="file" path="datastore/parcel_prefs.preferences_pb" />
    </device-transfer>
</data-extraction-rules>
